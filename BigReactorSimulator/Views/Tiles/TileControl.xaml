<UserControl x:Class="BigReactorSimulator.Views.Tiles.TileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BigReactorSimulator.Views.Tiles"
             mc:Ignorable="d" 
             Height="40" Width="40">
    <Border Name="TileBorder" Background="Transparent" BorderThickness="0" BorderBrush="LightGreen" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave" MouseDown="Grid_MouseDown" MouseUp="Grid_MouseUp">
        <Image Name="TileIcon" Source="{Binding Icon, UpdateSourceTrigger=PropertyChanged}"/>
    </Border>
</UserControl>
